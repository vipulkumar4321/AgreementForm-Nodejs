  <script>
    $(document).ready(function () {
      $('input[type="checkbox"]').click(function () {
        if ($(this).prop("checked") == true) {
          $("#result").toggleClass("disabled");
          $("form").attr("action", "/step1");
        } else if ($(this).prop("checked") == false) {
          $("#result").toggleClass("disabled");
        }
      });
    });
  </script>
</head>

<body>
  <div class="center">
    <img src="https://s3.ap-south-1.amazonaws.com/venuefy.images/venuefy-logo.png" alt="Venuefy" />
  </div>

  <hr class="style" />

