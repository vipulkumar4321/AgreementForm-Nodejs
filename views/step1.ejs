<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Agreement</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous" />
    <link rel="stylesheet" type="text/css" href="/main.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="/step1.js"></script>

    <script>
        $(document).ready(function () {
            $('input[type="checkbox"]').click(function () {
                if ($(this).prop("checked") == true) {
                    $("#result").toggleClass("disabled");
                    $("form").attr("action", "/thanks");
                } else if ($(this).prop("checked") == false) {
                    $("#result").toggleClass("disabled");
                }
            });
        });
    </script>
</head>

<body>
    <div class="center">
        <img src="https://s3.ap-south-1.amazonaws.com/venuefy.images/venuefy-logo.png" alt="Venuefy" />
    </div>

    <hr class="style" />

    <div class="container companyDetail">
        <div class="p-4">
            <div class="form-group mt-4">
                <label for="companyName">Name of the company</label>
                <input type="text" class="form-control" id="composedName" placeholder="Company Name" required />
            </div>
            <div class="form-group">
                <label for="inputAddress">Address</label>
                <input type="text" class="form-control" id="inputAddress" name="cAddress" placeholder="1234 Main St" />
            </div>
            <div class="form-group">
                <label for="inputEmail">Email</label>
                <input type="email" class="form-control" id="inputEmail" name="cEmail" placeholder="abc123@xyz.com" />
            </div>
            <div class="form-group">
                <label for="contactNumber">Contact Number</label>
                <input type="tel" class="form-control" id="contactNumber" name="cContactNumber"
                    placeholder="Contact Number" />
            </div>
            <div class="form-group">
                <label for="whatsappNumber">Whatsapp Number</label>
                <input type="tel" class="form-control" id="whatsappNumber" name="cWhatsappNumber"
                    placeholder="Whatsapp Number" />
            </div>

            <!-- Aaadhar card -->
            <div class="form-group">
                <label for="aadhaarFront">Aadhaar Front</label>
                <input type="file" accept="image/*" class="form-control-file mb-1" name="cAadhaarFront"
                    id="aadhaarFront" />
            </div>
            <div class="form-group">
                <label for="aadhaarBack">Aadhaar back</label>
                <input type="file" accept="image/*" class="form-control-file" name="cAadharBack" id="aadhaarBack" />
            </div>
            <!-- PAN card -->
            <div class="form-group mt-5">
                <label for="panFront">PAN Front</label>
                <input type="file" accept="image/*" class="form-control-file mb-1" name="cPANFront" id="panFront" />
            </div>
            <div class="form-group">
                <label for="panBack">PAN back</label>
                <input type="file" accept="image/*" class="form-control-file" name="cPANBack" id="panBack" />
            </div>
            <!-- Cancelled cheque -->
            <div class="form-group mt-5">
                <label for="cheque">Cheque</label>
                <input type="file" accept="image/*" class="form-control-file mb-1" name="cCheque" id="cheque" />
            </div>
            <!-- signature -->
            <div class="form-group mt-5">
                <label for="signature">signature</label>
                <input type="file" accept="image/*" class="form-control-file mb-1" name="cSignature" id="signature" />
            </div>
            <!-- photo -->
            <div class="form-group mt-5">
                <label for="photo">Photo</label>
                <input type="file" accept="image/*" class="form-control-file mb-1" name="cPhoto" id="photo" />
            </div>

            <div class="container mt-4">
                <p class="check display-4">
                    <input type="checkbox" /> Check or uncheck the checkbox to get the
                    status.
                </p>
                <div class="center">
                    <button type="submit" onclick="sub()" id="result" class="btn btn-primary disabled">
                        Check to Proceed
                    </button>
                    <!-- <button onclick="sub()" class="button text-center">Check to Proceed</button> -->
                </div>
            </div>

            <div>
            </div>

</body>

</html>